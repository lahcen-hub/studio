rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /calculations/{calculationId} {
      // Helper function to check ownership
      function isOwner() {
        return request.auth != null && request.auth.uid == resource.data.uid;
      }
      
      // Allow users to read their own calculations
      allow read: if isOwner();
      
      // Allow users to create calculations for themselves, ensuring the UID is correctly set
      allow create: if request.auth != null &&
                      request.resource.data.uid == request.auth.uid &&
                      request.resource.data.uid is string;
                      
      // Allow users to update their own calculations
      allow update: if isOwner();

      // Allow users to delete their own calculations
      allow delete: if isOwner();
    }
  }
}
